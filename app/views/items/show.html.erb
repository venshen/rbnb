
<h2><%= @item.name%></h2>
<img src="<%= @item.picture_url%>" alt="" style="width: 100px">
<p>Created at: <%= @item.created_at%></p>
<p>Adress: <%= @item.address%></p>
<p>Price: <%= @item.price%></p>
<p>Deposit: <%= @item.deposit%></p>
<p>Category: <%= @item.category%></p>
<p>Posted by: <%= @item.user.first_name%></p>
<p>Location: <%= @item.user.location%></p>
<p>Geo: <%= @marker.latitude%> and <%= @marker.longitude %></p>
<h2>See on map:</h2>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @marker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= link_to "Book this item", new_item_booking_path(@item) %>
<%= link_to "Back to item page", items_path %>
